<h1>Categories</h1>

<%= link_to 'new', new_admin_category_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>title</th>
      <th>created_at</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.title %></td>
        <td><%= category.created_at %></td>
        <td>
          <%= link_to 'edit', [:edit, :admin, category], class: 'btn btn-info' %>
          <%= link_to 'delete', [:admin, category], data: { method: :delete, confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

