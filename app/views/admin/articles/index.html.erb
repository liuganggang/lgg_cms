<h1>Articles</h1>

<%= link_to 'new', new_admin_article_path, class: 'btn btn-info' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>title</th>
      <th>created_at</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.created_at %></td>
        <td>a</td>
      </tr>
    <% end %>
  </tbody>
</table>

