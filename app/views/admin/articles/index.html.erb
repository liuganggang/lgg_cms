<h1>Articles</h1>

<%= link_to 'new', new_admin_article_path, class: 'btn btn-primary' %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>title</th>
      <th>created_at</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= link_to article.title, [:admin, article] %></td>
        <td><%= article.created_at %></td>
        <td>
          <%= link_to 'edit', [:edit, :admin, article], class: 'btn btn-info' %>
          <%= link_to 'delete', [:admin, article], data: { method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

